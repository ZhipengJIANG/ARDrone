package lib.ardrone;

//import org.apache.log4j.Logger;
/**
 * Here is the global parameters used for the drone configuration
 *
 * @author presse_yan
 */
public class Global {

    /**
     * UDP port used for ATCommand
     */
    public static final int CONTROL_PORT = 5556;
    public static final int CONTROL_PORT_LOCAL = 6556;
    public static final int CONTROL_PORT_SIMUL = 7556;
    /**
     * UDP port used for NavData
     */
    public static final int NAVDATA_PORT = 5554;
    public static final int NAVDATA_PORT_LOCAL = 6554;
    public static final int NAVDATA_PORT_SIMUL = 7554;
    /**
     * UDP port used for video
     */
    public static final int VIDEO_PORT = 5555;
    public static final int VIDEO_PORT_LOCAL = 6555;
    public static final int VIDEO_PORT_SIMUL = 7555;
    /**
     * TCP port used for the phone when attached
     */
    public static final int PHONE_PORT = 8080;
    /**
     * IP address for the multicast group
     */
    public static final String MULTICAST_GROUP = "224.1.1.1";
    // NavData related constants
    /**
     * Number of different tag to be detected
     */
    public static final int NB_TAG_SEARCHED = 4;
    /**
     * Numbers of accelerometers
     */
    /**
     * Numbers of gyroscopes
     */
    public static final int NB_ACCS = 3, NB_GYROS = 3;
}
